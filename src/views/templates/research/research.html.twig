{% extends "default.html.twig" %}

{% block title %}IFÀ | Research{% endblock %}

{% block stylesheet %}
<link href="/../public/css/research.css" rel="stylesheet">
{% endblock %}

{% block header %}
{% include 'header.html.twig' %}
{% endblock %}

{% block body %}
<div class="search-add">
    <div class="searchBar">
        <form action="/research" method="get" class="search-form">
            <div class="group-search">
                <svg class="iconSearch" aria-hidden="true" viewBox="0 0 24 24">
                    <g>
                        <path
                            d="M21.53 20.47l-3.66-3.66C19.195 15.24 20 13.214 20 11c0-4.97-4.03-9-9-9s-9 4.03-9 9 4.03 9 9 9c2.215 0 4.24-.804 5.808-2.13l3.66 3.66c.147.146.34.22.53.22s.385-.073.53-.22c.295-.293.295-.767.002-1.06zM3.5 11c0-4.135 3.365-7.5 7.5-7.5s7.5 3.365 7.5 7.5-3.365 7.5-7.5 7.5-7.5-3.365-7.5-7.5z">
                        </path>
                    </g>
                </svg>
                <input placeholder="Cherchez un nom, un titre" type="search" value="{{ searchQuery }}" class="search" name="search">
            </div>
        </form>
    </div>
</div>

<div class="ProfilContainer">
    <h1>Découvrez des professionnel</h1>
    <div class="allProfil">
        {% for user in userData %}
        <a href="profile-{{ user.IdUser }}">
            <div class="profil">
                <div class="profilPictureName">
                    <img id="icon" src="data:image;base64,{{user.ProfilPicture}}" alt="icon">
                    <h1>{{ user.FirstName }} {{ user.LastName }}</h1> <i id="certifIcon"class="fas fa-check-circle"></i>
                </div>
                <div class="promotion">  <!--"acheter tes premières actions dans un monde en plein developpement et hyperactif dans la cryptographie "-->
                    {{ user.ProfilPromotion }}
                </div>
            </div>
        </a>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block footer %}{% endblock %}

{% block scripts %}
{% endblock %}