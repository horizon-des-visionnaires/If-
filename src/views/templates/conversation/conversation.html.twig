    </div>
    {% endif %}
</div>

{% for user in conversationUsers %}
<div class="convContainer">
    <div class="conv">
        <img id="icon2" src="data:image;base64,{{user.ProfilPicture}}" alt="icon">
        {% if user.IsPro == 1 %}
        <div class="pro">
            <h2>{{ user.FirstName }} {{ user.LastName }}</h2> <i id="certifIcon" class="fas fa-check-circle"></i>
        </div>
        {% else %}
        <div class="notpro">
            <h2>{{ user.FirstName }} {{ user.LastName }}</h2>
        </div>
    </div>
    {% endif %}
</div>
