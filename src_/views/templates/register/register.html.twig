{% extends "default.html.twig" %}

{% block title %}Page d'inscription
{% endblock %}

{% block stylesheet %}
<link href="/ifadev/src/public/css/register.css" rel="stylesheet">
{% endblock %}

{% block header %}
{% include 'header.html.twig' %}
{% endblock %}

{% block body %}
<div class="container-form">
    <form class="form" action="/ifadev/src/index.php/register" method="post">
        <h1 class="title">Inscription</h1>
        <p class="message">Créez votre compte pour profiter de toute les fonctionnalités.</p>
        <div class="flex">
            <label>
                <input required="" placeholder="" name="firstName" type="text" class="input">
                <span>Prénom</span>
            </label>

            <label>
                <input required="" placeholder="" name="lastName" type="text" class="input">
                <span>Nom de famille</span>
            </label>
        </div>
        <label>
            <input required="" placeholder="" name="email" type="email" class="input">
            <span>Email</span>
        </label>

        <label>
            <input required="" placeholder="" name="userPassword" type="password" class="input" id="password">
            <span class="password-label">Mot de passe</span>
            <button type="button" id="togglePassword" class="toggle-password">Voir</button>
            <menu ul id="password-requirements">
                <li id="length">Minimum 8 caractères</li>
                <li id="uppercase">Au moins une majuscule</li>
                <li id="lowercase">Au moins une minuscule</li>
                <li id="number">Au moins un nombre</li>
            </menu ul>
        </label>
        {% if error %}
            <div class="error-message">{{ error }}</div>
        {% endif %}
        <button class="submit" name="submit" type="submit">Inscription</button>
        <p class="signin">Vous avez déjà un compte ? <a href="/login">Connexion</a> </p>
    </form>
</div>
{% endblock %}

{% block footer %}{% endblock %}

{% block scripts %}
<script src="/ifadev/src/public/js/checkPassword.js"></script>
<script src="/ifadev/src/public/js/showPassword.js"></script>
{% endblock %}